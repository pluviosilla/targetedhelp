	<script type="text/javascript">
		var activeText = "needs";
		var activeTab;
		var activeBlock;
		function switchTab(tab,text,blockId) {
			if(tab != activeTab) {
				//FontJazz restyling when switching tabs
				if(!activeTab) {
					activeTab = document.getElementById('needs-tab');
				}
				tab.innerHTML = "<h5>" + text + "</h5>";
				FontJazz.transform(tab.firstChild,"bluefont-small");
				
				activeTab.innerHTML = "<h5>" + activeText + "</h5>";
				FontJazz.transform(activeTab.firstChild,"greyfont-small");
				
				activeText = text;
				activeTab = tab;
				
				if(!activeBlock) {
					document.getElementById('needs').style.display = "none";
				}else{
					activeBlock.style.display = "none";
				}
				activeBlock = document.getElementById(blockId);
				activeBlock.style.display = "block";
			}
		}
	</script>
